<% content_for(:title, '登录') %>

<%= form_tag(login_path, class: 'login') do %>
  <input type="hidden" name="redirect_url" value="<%= params[:redirect_url] %>">

  <legend>楼兰审核管理系统</legend>

  <div class="form-group">
    <input type="text" class="form-control" name="username" required autofocus placeholder="工号">
  </div>

  <div class="form-group">
    <input type="password" class="form-control" name="password" required placeholder="密码">
  </div>

  <div class="form-group actions">
    <div class="message"></div>
    <button type="submit" class="btn btn-info ladda-button" data-style="zoom-in" data-spinner-color="#666666">登录</button>
  </div>
<% end %>
