<% content_for(:title, '首页') %>

<div class="container-fluid">
  <div class="row">
    <%= form_for :search, url: request.params, method: :get, html: { class: 'form-horizontal col-sm-11'} do |f| %>
      <div class="form-group">

        <div class="col-sm-3">
          <%= f.label 'bill_number', '单号', class:'col-sm-4 control-label' %>
          <div class="col-sm-8">
            <%= f.text_field 'bill_number', class: 'form-control input-sm' %>
          </div>
        </div>

        <div class="col-sm-3">
          <%= f.label 'bill_type', '单据名称', class:'col-sm-4 control-label' %>
          <div class="col-sm-8">
            <%= f.text_field 'bill_type', class: 'form-control input-sm' %>
          </div>
        </div>

        <div class="col-sm-3">
          <%= f.label 'created_at_greater_than_equal_to', '时间(起)', class:'col-sm-4 control-label' %>
          <div class="col-sm-8">
            <%= f.text_field 'created_at_greater_than_equal_to', class: 'form-control input-sm' %>
          </div>
        </div>

        <div class="col-sm-3">
          <%= f.label 'created_at_less_than_equal_to', '时间(始)', class:'col-sm-4 control-label' %>
          <div class="col-sm-8">
            <%= f.text_field 'created_at_less_than_equal_to', class: 'form-control input-sm' %>
          </div>
        </div>
      </div>

      <div class="collapse" id="collapse_filter">
        <div class="form-group">
          <div class="col-sm-3">
            <%= f.label 'bill_status', '处理情况', class:'col-sm-4 control-label' %>
