              <%= f.text_field 'bill_status', class: 'form-control input-sm' %>
            </div>
          </div>

          <div class="col-sm-3">
            <%= f.label 'payment_type.id', '其他备注', class:'col-sm-4 control-label' %>
            <div class="col-sm-8">
              <%= f.text_field 'bill_other_remark', class: 'form-control input-sm' %>
            </div>
          </div>
        </div>
      </div>
    <% end %>

